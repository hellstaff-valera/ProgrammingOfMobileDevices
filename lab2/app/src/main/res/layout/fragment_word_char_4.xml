<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".WordChar4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/textChar1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textChar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="@id/textCharTrue1"
            app:layout_constraintEnd_toEndOf="@id/textChar2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textChar2"
            app:layout_constraintBottom_toBottomOf="@id/textCharTrue2"
            app:layout_constraintEnd_toStartOf="@+id/textChar3"
            app:layout_constraintStart_toEndOf="@+id/textChar1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textChar3"
            app:layout_constraintBottom_toBottomOf="@id/textCharTrue3"
            app:layout_constraintEnd_toStartOf="@+id/textChar4"
            app:layout_constraintStart_toEndOf="@+id/textChar2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textChar4"
            app:layout_constraintBottom_toBottomOf="@id/textCharTrue4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textChar3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textCharTrue1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textCharTrue2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textChar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textCharTrue2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textCharTrue1"
            app:layout_constraintStart_toEndOf="@+id/textCharTrue3"
            app:layout_constraintTop_toBottomOf="@+id/textChar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textCharTrue3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textCharTrue4"
            app:layout_constraintStart_toEndOf="@+id/textCharTrue2"
            app:layout_constraintTop_toBottomOf="@+id/textChar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textCharTrue4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textCharTrue3"
            app:layout_constraintTop_toBottomOf="@+id/textChar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textSize="34sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>